<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @request.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @request.description %>
</p>

<p>
  <strong>Budget:</strong>
  <%= @request.budget %>
</p>

<p>
  <strong>Proposaldeadline:</strong>
  <%= @request.proposalDeadline %>
</p>

<p>
  <strong>Eventdate:</strong>
  <%= @request.eventDate %>
</p>

<p>
  <strong>Address:</strong>
  <%= @request.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @request.city %>
</p>

<p>
  <strong>Province:</strong>
  <%= @request.province %>
</p>

<p>
  <strong>Category:</strong>
  <%= @request.category %>
</p>

<p>
  <strong>Status:</strong>
  <%= @request.status %>
</p>
 

<% if current_user && current_user.id == @request.user_id %>
  <%= link_to 'Edit', edit_request_path(@request) , :class => 'btn btn-info' %>  
<% end %>
<%= link_to 'Back', requests_path , :class => 'btn btn-info' %>  
<% if current_user && current_user.userrole=='service_provider' %>
  <%= link_to 'Response', new_proposal_path(:id => @request.id) , :class => 'btn btn-info' %>
<% end %>

<% if current_user &&  current_user.id == @request.user_id %>
  <div class="response">

    <div class="response-rows">
      <% @proposals.each do |proposal| %>
        <div class="response-row" >
          <span class="proposal-label">Description:</span><span><%= proposal.description %></span>
          <span class="proposal-label">Price:</span><span><%= proposal.price %></span>
          
          <span class="proposal-label">Accept:</span><%= content_tag(:span, proposal.accept, :class => "accept_#{proposal.accept}") %>
          <span><%= link_to 'Show', proposal %></span>
          <% if current_user &&  current_user.userrole == 'service_provider' %>
            <span><%= link_to 'Edit', edit_proposal_path(proposal) %></span>
            <span><%= link_to 'Destroy', proposal, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          <% end %>
        </div>
      <% end %>
    </div>
<% end %>
</div>

