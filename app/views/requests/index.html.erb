<p id="notice"><%= notice %></p>

<h1>Requests</h1>


<div class="request-rows">
  <% @requests.each do |request| %>



    <div class="request-row rectangle <%="request_#{request.status}" %>">
    <%= link_to request do  %>
      <% if request.category == 'Food Services' %>
        <div class="circle <%="circle_#{request.status}" %>">	<i class="material-icons" style="font-size:30px"> restaurant</i></div>
      <% elsif request.category == 'Beauty Services' %>
        <div class="circle <%="circle_#{request.status}" %>"><i class="material-icons" style="font-size:30px">spa</i></div>
      <% elsif request.category == 'Event Services' %>
        <div class="circle <%="circle_#{request.status}" %>"><i class="material-icons" style="font-size:30px">event_note</i></div>
      <% elsif request.category == 'Farm & Garden Services' %>
        <div class="circle <%="circle_#{request.status}" %>"><i class="material-icons" style="font-size:30px">nature_people</i></div>
      <% end %>
      <div class="request-name"><h5><%= request.name %></h5></div>
      <div class="request-lines ">

        <div class="request-line"><span>Description: </span><span><%= truncate(request.description, :length => 25 ) %></span></div>
        <div class="spacer"></div>
        <div class="request-line budget-group">
          <span><i class="fa fa-dollar custom" style="font-size:22px"></i>&nbsp;<%= (request.budget) %></span>
          <span><i class="fa fa-clock-o " style="font-size:24px"></i>&nbsp;  <%= request.proposalDeadline %></span>
        </div>
      </div>
      <div class="request-row-footer">
        <em>
          <% if current_user %>
            <span class="footer-right"><%= link_to '', request , :class => 'test' %></span>
          <% else %>
            <span class="footer-right" ><%= link_to 'login', login_path , :class => 'btn btn-info'  %></span>
          <% end %>

        </em>
      </div>
    </div>
    <% end %>
  <% end %>

</div>


<br/>




