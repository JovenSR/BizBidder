<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Budget</th>
      <th>Proposaldeadline</th>
      <th>Eventdate</th>
      <th>Address</th>
      <th>City</th>
      <th>Province</th>
      <th>Category</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.description %></td>
        <td><%= request.budget %></td>
        <td><%= request.proposalDeadline %></td>
        <td><%= request.eventDate %></td>
        <td><%= request.address %></td>
        <td><%= request.city %></td>
        <td><%= request.province %></td>
        <td><%= request.category %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Details', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Delete', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

