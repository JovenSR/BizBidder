<h1>New Proposal</h1>


 
<%= form_for(@proposal) do |f| %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label 'Bid Price' %>
    <%= f.text_field :price %>
  </div>

  <%= hidden_field_tag 'request_id', params[:id] %>
  <%= hidden_field_tag 'service_provider_id', 1 %>

  <div class="actions">
    <%= f.submit 'Submit Bid' %>
  </div>
<% end %>


<%= link_to 'Back', proposals_path %>
