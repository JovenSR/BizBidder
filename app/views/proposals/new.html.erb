<h1>New Proposal</h1>


 
<%= form_for(@proposal) do |f| %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label 'Bid Price' %>
    <%= f.text_field :price %>
  </div>
  <%= f.hidden_field :request_id, :value => @request.id %>
  <%= f.hidden_field :service_provider_id, :value => @sp[0].id %>
 
  <div class="actions">
    <%= f.submit 'Submit Bid',  :class => 'new-proposal-footer-btn' %>
  </div>
<% end %>


<%= link_to 'Back', proposals_path %>
